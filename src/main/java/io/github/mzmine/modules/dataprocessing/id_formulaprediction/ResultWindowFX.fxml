<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="200" minWidth="700" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.mzmine.modules.dataprocessing.id_formulaprediction.ResultWindowController">

    <bottom>

        <ButtonBar style="-fx-padding: 5 5 5 5;">
            <buttons>
                <Button fx:id="addIdentity" onAction="#addIdentityClick" text="Add Identity">
                </Button>
                <Button fx:id="Copy" onAction="#copyClick" text="Copy to clipboard">
                </Button>
                <Button fx:id="Export" onAction="#exportClick" text="Export all">
                </Button>
                <Button fx:id="ViewIsotope" onAction="#viewIsotopeClick" text="View isotope pattern">
                </Button>
                <Button fx:id="ViewIsotopeMirror" onAction="#viewIsotopeMirrorClick" text="View isotope mirror">
                </Button>
                <Button fx:id="ShowMS" onAction="#showsMSClick" text="Show MS / MS">
                </Button>
            </buttons>
        </ButtonBar>
    </bottom>

    <center>
        <TableView fx:id="resultTable" minHeight="100">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="Formula" minWidth="40" text="Formula" />
                <TableColumn fx:id="absoluteMassDifference" minWidth="40" text="ΔMass (Da)" />
                <TableColumn fx:id="massDifference" minWidth="40" text="ΔMass (ppm)" />
                <TableColumn fx:id="RDBE" minWidth="40" text="RDBE" />
                <TableColumn fx:id="isotopePattern" minWidth="40.0" prefWidth="-1.0" sortType="DESCENDING" text="Isotope pattern " />
                <TableColumn fx:id="msScore" minWidth="40" sortType="DESCENDING" text="MS/MS Score" />
                <TableColumn fx:id="combinedScore" minWidth="40" sortType="DESCENDING" text="Combined score" />
            </columns>
        </TableView>
    </center>
   <top>
      <VBox prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
            <HBox fx:id="pnParam" alignment="CENTER_LEFT" spacing="5.0">
               <Label text="m/z">
                  <font>
                     <Font name="System Italic" size="12.0" />
                  </font>
               </Label>
                  <TextField fx:id="txtSearchedMz" prefColumnCount="10" />
                  <Button mnemonicParsing="false" onAction="#setIsotopes" text="Isotopes" />
                  <Button mnemonicParsing="false" onAction="#setFragmentationSpectra" text="MS/MS" />
                  <Button mnemonicParsing="false" onAction="#setParameters" text="Parameters" />
                  <CheckBox fx:id="cbLimitFormula" mnemonicParsing="false" text="Limit to formula" />
                  <TextField fx:id="txtMaxFormula" />
               </HBox>
         </VBox>
   </top>
</BorderPane>
