<BorderPane minHeight="200" minWidth="700" prefWidth="900.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.mzmine.modules.dataprocessing.id_formulaprediction.ResultWindowController">

    <center>
      <SplitPane dividerPositions="0.2">
         <items>
            <BorderPane fx:id="pnIsotopeMirror" prefWidth="200.0" />
              <TableView fx:id="resultTable" minHeight="100">
                  <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                  <columns>
                      <TableColumn fx:id="Formula" minWidth="40" text="Formula" />
                      <TableColumn fx:id="absoluteMassDifference" minWidth="40" prefWidth="79.2000732421875" text="ΔMass (Da)" />
                      <TableColumn fx:id="massDifference" minWidth="40" prefWidth="125.59991455078125" text="ΔMass (ppm)" />
                      <TableColumn fx:id="RDBE" minWidth="40" prefWidth="60.800079345703125" text="RDBE" />
                      <TableColumn fx:id="isotopePattern" minWidth="40.0" prefWidth="143.99993896484375" sortType="DESCENDING" text="Isotope pattern " />
                      <TableColumn fx:id="msScore" minWidth="40" sortType="DESCENDING" text="MS/MS Score" />
                      <TableColumn fx:id="combinedScore" minWidth="40" sortType="DESCENDING" text="Combined score" />
                  </columns>
              </TableView>
         </items>
      </SplitPane>
    </center>
   <top>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <HBox fx:id="pnParam" alignment="CENTER_LEFT" spacing="5.0">
            <Label text="m/z">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
               <TextField fx:id="txtSearchedMz" prefColumnCount="10" />
<!--                  <Button mnemonicParsing="false" onAction="#setFragmentationSpectra" text="MS/MS" />-->
               <Button mnemonicParsing="false" onAction="#setParameters" text="Parameters" />
               <CheckBox fx:id="cbLimitFormula" mnemonicParsing="false" text="Limit to formula" />
               <TextField fx:id="txtMaxFormula" />
            </HBox>
            <Accordion>
              <panes>
                <TitledPane animated="false" text="Isotopes">
                  <content>
                        <ScrollPane fitToWidth="true" prefHeight="125.0">
                           <TextArea fx:id="txtIsotopes" promptText="m/z,intensity&#13;m/z,intensity" />
                           </ScrollPane>
                  </content>
                     </TitledPane>
<!--                <TitledPane animated="false" text="MS/MS">-->
<!--                     <content>-->
<!--                        <ScrollPane prefHeight="200.0" prefWidth="200.0">-->
<!--                           <content>-->
<!--                              <TextArea prefHeight="200.0" prefWidth="200.0" />-->
<!--                           </content>-->
<!--                        </ScrollPane>-->
<!--                     </content>-->
<!--                </TitledPane>-->
              </panes>
            </Accordion>
         </VBox>
   </top>
   <bottom>

              <ButtonBar style="-fx-padding: 5 5 5 5;" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="addIdentity" onAction="#addIdentityClick" text="Add Identity">
                </Button>
                <Button fx:id="Copy" onAction="#copyClick" text="Copy to clipboard">
                </Button>
                <Button fx:id="Export" onAction="#exportClick" text="Export all">
                </Button>
                <Button fx:id="ViewIsotope" onAction="#viewIsotopeClick" text="View isotope pattern">
                </Button>
                <Button fx:id="ViewIsotopeMirror" onAction="#viewIsotopeMirrorClick" text="View isotope mirror">
                </Button>
                <Button fx:id="ShowMS" onAction="#showsMSClick" text="Show MS / MS">
                </Button>
            </buttons>
        </ButtonBar>
   </bottom>
</BorderPane>
